{
    "name": "vsnotes",
    "displayName": "VS Notes",
    "description": "Turn VS Code into a note taking tool.",
    "version": "0.1.0",
    "publisher": "patricklee",
    "repository": {
        "type": "git",
        "url": "https://github.com/patleeman/VSNotes.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "vsnotes",
        "notes",
        "note taking",
        "productivity",
        "note"
    ],
    "activationEvents": [
        "onCommand:extension.newNote",
        "onCommand:extension.listNotes",
        "onCommand:extension.listTags",
        "onCommand:extension.setupNotes",
        "onCommand:extension.openNoteFolder"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "VSNotes Configuration",
            "properties": {
                "vsnotes.defaultNotePath": {
                    "type": "string",
                    "default": "",
                    "description": "Default location to save notes."
                },
                "vsnotes.tokens": {
                    "type": "array",
                    "description": "Tokens used to replace text.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "description": "Token name"
                            },
                            "token": {
                                "type": "string",
                                "description": "Token string"
                            },
                            "format": {
                                "type": [
                                    "string",
                                    null
                                ],
                                "description": "Optional formatting information"
                            },
                            "description": {
                                "type": [
                                    "string",
                                    null
                                ],
                                "description": "Token description"
                            }
                        }
                    },
                    "default": [
                        {
                            "type": "datetime",
                            "token": "{dt}",
                            "format": "YYYY-MM-DD_HH-mm",
                            "description": "Insert current datetime"
                        },
                        {
                            "type": "title",
                            "token": "{title}",
                            "description": "Insert note title",
                            "format": "Untitled"
                        },
                        {
                            "type": "extension",
                            "token": "{ext}",
                            "description": "Insert file extension",
                            "format": "md"
                        }
                    ]
                },
                "vsnotes.defaultNoteTitle": {
                    "type": "string",
                    "default": "{dt}_{title}.{ext}",
                    "description": "Default note title utilizing tokens"
                },
                "vsnotes.listRecentLimit": {
                    "type": "number",
                    "default": 15,
                    "description": "Number of recent files to show when running command `List Notes`"
                },
                "vsnotes.noteTitleConvertSpaces": {
                    "type": "string",
                    "default": "_",
                    "description": "Automatically convert spaces in notes titles to symbol. To disable set to `null`"
                }
            }
        },
        "commands": [
            {
                "command": "extension.newNote",
                "title": "VSNotes: New Note"
            },
            {
                "command": "extension.listNotes",
                "title": "VSNotes: List recent notes"
            },
            {
                "command": "extension.listTags",
                "title": "VSNotes: List tags"
            },
            {
                "command": "extension.openNoteFolder",
                "title": "VSNotes: Open Note Folder"
            },
            {
                "command": "extension.setupNotes",
                "title": "VSNotes: Run setup"
            }
        ],
        "snippets": [
            {
                "language": "markdown",
                "path": "./snippets/markdown.json"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "mocha": "^3.5.0",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.0",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "fs-extra": "^4.0.2",
        "gray-matter": "^3.1.1",
        "klaw": "^2.1.0",
        "moment": "^2.19.1"
    }
}
