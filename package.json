{
    "name": "vsnotes",
    "displayName": "VSNotes",
    "description": "Create markdown notes in a note directory",
    "version": "0.0.1",
    "publisher": "PatrickLee",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.newNote",
        "onCommand:extension.listNotes",
        "onCommand:extension.setupNotes",
        "onCommand:extension.openNoteFolder"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "VSNotes Configuration",
            "properties": {
                "vsnotes.defaultNotePath": {
                    "type": "string",
                    "default": "",
                    "description": "Default location to save notes."
                },
                "vsnotes.defaultFilenameFormat": {
                    "type": "string",
                    "default": "{YYYY-MM-DD_HH-mm}_{title}",
                    "description": "Default filename format. See <documentation> for information. Accepts date time formatting {YYYY-MM-DD_HH-mm}."
                }
            }
        },
        "commands": [
            {
                "command": "extension.newNote",
                "title": "VSNotes: New Note"
            },
            {
                "command": "extension.listNotes",
                "title": "VSNotes: List recent notes"
            },
            {
                "command": "extension.setupNotes",
                "title": "VSNotes: Run setup"
            },
            {
                "command": "extension.openNoteFolder",
                "title": "VSNotes: Open Note Folder"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "mocha": "^3.5.0",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.0",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "fs-extra": "^4.0.2",
        "moment": "^2.19.1"
    }
}
